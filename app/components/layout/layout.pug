mixin layout()
  +b.layout&attributes(attributes)
    block
    
mixin ui-kit-layout()
  +ui-section
    +ui-section-head
      +ui-title Компонент layout
      +ui-path
        p Компонент: components/layout/layout
      +ui-description
        p Описание компонента
  
    +ui-section-content()
      +layout
      
    //- При +ui-section-content(true) контейнер отсутствует
    //- Для перечисления инлайновых блоков используется миксин +ui-elements-list()
    //- Рамка вокруг особой секции: +ui-special()